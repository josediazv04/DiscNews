<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ra_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        fresco:actualImageScaleType="focusCrop" />

    <TextView
        android:id="@+id/ra_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ra_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description" />

    <TextView
        android:id="@+id/ra_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description" />

    <TextView
        android:id="@+id/ra_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A minute ago" />

    <TextView
        android:id="@+id/ra_uuid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123e4567-e89b-12d3-a456-426655440000" />

</LinearLayout>
